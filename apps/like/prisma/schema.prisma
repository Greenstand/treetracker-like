// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //url      = "file:../postDB"
}

model User {
  id              String          @id @default(uuid())
  name            String
  username        String          @unique
  likedObjects    ObjectsOnUsers[]  
}

model Type {
  id              String          @id @default(uuid())
  name            String
  likableObjects  LikableObject[]
}

model LikableObject {
  id              String          @id @default(uuid())
  objectType      Type            @relation(fields: [typeId], references: [id])
  typeId          String 
  numLikes        Int            
  likedUsers      ObjectsOnUsers[]
}

model ObjectsOnUsers {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  object     LikableObject @relation(fields: [objectId], references: [id])
  objectId   String

  @@id([userId, objectId])
}